{
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "outDir": "dist/bin",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "watch": true,
        "lib": ["es2015", "es2015.iterable", "dom"],
        "downlevelIteration": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts"
    ]
}